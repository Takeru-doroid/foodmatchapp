<div class="text-center">
  <div class="form-signin border rounded">
    <h2 class="h3 mb-3 fw-normal">ログイン</h2>
    <%= form_with model: @user, url: user_session_path, id: "new-user", class: "new-user", local: true do |f| %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example.com" %>
        <%= f.label :email %>
      </div>
      <div class="input-group mb-3">
        <div class="form-floating ">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "半角英数字6文字以上" %>
          <%= f.label :password %>
        </div>
        <span class="input-group-text fa-regular fa-eye-slash" id="toggle-password-icon" ></span>
      </div>
      <div class="checkbox text-start mb-4">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, class: "" %>
          <%= f.label :remember_me, class: "" %>
        <% end %>
      </div>
      <div class="actions d-grid col-10 mx-auto mb-5">
        <%= f.submit "ログイン", class: "btn btn-outline-primary btn-block" %>
      </div>
    <% end %>
    <div class="border-bottom mb-3"></div>
    <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name), class: "fw-bold text-dark" %>
  </div>
</div>
