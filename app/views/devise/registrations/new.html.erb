<div class="text-center">
  <div class="form-edit border rounded">
    <h2 class="h3 mb-3 fw-normal">新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: "new-user", class: "new-user", local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group row mb-3">
        <div class="col-4">
          <%= f.label :name, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row mb-4">
        <div class="col-4">
          <%= f.label :email, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@example.com" %>
        </div>
      </div>
      <div class="form-group row mb-1">
        <div class="col-4">
          <%= f.label :password, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <span class="form-text text-secondary"><%= @minimum_password_length %>文字以上、半角英数字1文字以上</span>
          <% end %>
        </div>
      </div>
      <div class="form-group row mb-4">
        <div class="col-4">
          <%= f.label :password_confirmation, class: "col-form-label text-dark form-text" %>
        </div>
        <div class="col-8">
          <div class="input-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            <span class="input-group-text fa-regular fa-eye-slash" id="toggle-password-icon" ></span>
          </div>
          <span class="form-text">パスワードを再入力してください</span>
        </div>
      </div>
      <div class="actions d-grid col-10 mx-auto mb-3">
        <%= f.submit "登録する", class: "btn btn-outline-secondary btn-block" %>
      </div>
    <% end %>    
  </div>
</div>
