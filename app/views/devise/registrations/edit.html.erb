<h2>編集 <%= resource_name.to_s.humanize %></h2>

<%= form_with model: @user, url: user_registration_path, method: :put, id: "edit_user", class: "edit_user", local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(もしパスワードを変更したくない場合は、空欄のままで結構です)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(ユーザー情報を変更するために、現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
    <span class="fa-regular fa-eye-slash" id="toggle-password-icon" ></span>
  </div>

  <div class="field">
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<div>アカウントを削除します。大丈夫ですか? <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に大丈夫ですか?", turbo_confirm: "本当に大丈夫ですか?" }, method: :delete %></div>

<%= link_to "戻る", :back %>
