<div class="text-center">
  <div class="form-edit border rounded">
    <h2 class="h3 mb-5 fe-normal">ユーザー編集</h2>
    <%= form_with model: @user, url: user_registration_path, method: :put, id: "edit_user", class: "edit_user", local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group row mb-3">
        <div class="col-4">
          <%= f.label :name, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row mb-4">
        <div class="col-4">
          <%= f.label :email, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <div class="form-group row mb-3">
        <div class="col-4">
          <%= f.label :password, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <span class="form-text fw-lighter">もしパスワードを変更したくない場合は、空欄のままで結構です</span>
      </div>
      <div class="form-group row mb-4">
        <div class="col-4">
          <%= f.label :password_confirmation, class: "col-form-label text-dark form-text" %>
        </div>
        <div class="col-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row mb-4">
        <div class="col-4">
          <%= f.label :current_password, class: "col-form-label text-dark" %>
        </div>
        <div class="col-8">
          <div class="input-group">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            <span class="input-group-text fa-regular fa-eye-slash" id="toggle-password-icon" ></span>
          </div>
        </div>
        <span class="form-text fw-lighter">ユーザー情報を変更するために、現在のパスワードが必要です</span>
      </div>
      <div class="form-group row mb-5">
        <div class="col-4">
          <%= f.label :avatar, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= f.file_field :avatar, class: "form-control form-control-sm" %>
        </div>
      </div>
      <div class="actions d-grid col-10 mx-auto mb-4">
        <%= f.submit "更新する", class: "btn btn-outline-info btn-block" %>
      </div>
    <% end %>
    <div class="mb-5">
      <%= link_to "前に戻る", :back, class: "text-secondary" %>
    </div>
    <div class="border mb-3"></div>
    <h2 class="fs-5 fw-bold text-danger mb-3">アカウント削除</h2>
    <div class="fs-light text-dark mb-4">アカウントを削除します。大丈夫ですか? </div>
    <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に大丈夫ですか?", turbo_confirm: "本当に大丈夫ですか?" }, method: :delete, class: "btn btn-sm btn-outline-danger col-8" %>
  </div>
</div>
